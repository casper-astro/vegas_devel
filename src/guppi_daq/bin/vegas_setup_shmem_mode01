#!/bin/bash
${VEGAS_DIR}/bin/vegas_init_shmem 
ipython ${VEGAS_DIR}/python/guppi_set_params.py -D --nogbt
ipython ${VEGAS_DIR}/python/guppi_set_params.py -U --nogbt \
    --host=10.0.0.4     \
    --port=60000        \
    --packets=SPEAD     \
    --npol=2		    \
    --nchan=1024        \
    --chan_bw=585.938e3 \
    --nsubband=1        \
    --sub0freq=2.4e9    \
    --exposure=2e-3    \
    --fpgaclk=150e6     \
    --efsampfr=1.2e9    \
    --hwexposr=0.5e-3   \
