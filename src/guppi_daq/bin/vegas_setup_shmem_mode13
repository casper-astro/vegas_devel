#!/bin/bash
${GUPPI_DIR}/bin/vegas_init_shmem 
python2.5 ${GUPPI_DIR}/python/guppi_set_params.py -D --nogbt
python2.5 ${GUPPI_DIR}/python/guppi_set_params.py -U --nogbt \
    --host=10.0.0.4     \
    --port=60000        \
    --packets=SPEAD     \
    --npol=2		    \
    --nchan=4096        \
    --chan_bw=2288.8    \
    --nsubband=8        \
    --sub0freq=2.4e9    \
    --sub1freq=2.5e9    \
    --sub2freq=2.6e9    \
    --sub3freq=2.7e9    \
    --sub4freq=2.8e9    \
    --sub5freq=2.9e9    \
    --sub6freq=3.0e9    \
    --sub7freq=3.1e9    \
    --exposure=20e-3    \
    --fpgaclk=150e6     \
    --efsampfr=18.75e6  \
    --hwexposr=10e-3    \
 
